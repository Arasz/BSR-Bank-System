<Page x:Class="AccountMangmentClient.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AccountMangmentClient.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <StackPanel Margin="10,10">
        <TextBox Name="LoginTextBox" Margin="0,20" />
        <PasswordBox Name="PasswordBox" Margin="0,0,0,20" />

        <Button Name="LoginButton" Content="Login" Margin="0,0,0,20" />
    </StackPanel>
</Page>