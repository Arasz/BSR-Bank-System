<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>

  <system.serviceModel>

    <bindings>
      <basicHttpBinding>
        <binding name="secureBinding">
          <security>
            <message clientCredentialType="UserName" />
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>

    <client>
      <!-- specifies the endpoint to use when calling the service -->
      <endpoint address="http://localhost:7546" name="BankServiceEndpoint"
          binding="basicHttpBinding" bindingConfiguration="secureBinding"
          contract="Service.Contracts.IBankService">
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>