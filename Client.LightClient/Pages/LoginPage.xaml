<Page x:Class="Client.LightClient.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Client.LightClient"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage"
      DataContext="{Binding Source={StaticResource Locator}, Path=Login}">

    <Grid>
        <StackPanel>
            <TextBox Margin="10"  Text="{Binding Username}" />
            <PasswordBox Margin="10" Name="PasswordBox"
                         PasswordChanged="ReadPassword" />
            <Button Content="Log In" Margin="10" Command="{Binding LoginCommand}" />
        </StackPanel>
    </Grid>
</Page>